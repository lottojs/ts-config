{
    "compilerOptions": {
        "moduleResolution": "node",
        "strict": true,
        "noUnusedLocals": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "downlevelIteration": true,
        "noUnusedParameters": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "esModuleInterop": true,
        "removeComments": true,
        "declaration": true,
        "sourceMap": true,
        "lib": [
            "ES2016",
            "ES2017",
            "ES2018",
            "ES2019",
            "ES2020"
        ],
        "module": "commonjs",
        "target": "es6"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": ["node_modules", "lib", "dist"]
}
